<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--        Master   -->
        <record id="master_tree_view" model="ir.ui.view">
            <field name="name">Master</field>
            <field name="model">master_x</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" invisible="1"/>
                    <field name="date"/>
                    <field name="tax_information"/>
                    <field name="amount"/>
                    <field name="bank_id"/>
                    <field name="country_id"/>
                </tree>
            </field>
        </record>

        <record id="master_form_view" model="ir.ui.view">
            <field name="name">Master</field>
            <field name="model">master_x</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" invisible="1"/>
                                <field name="date"/>
                                <field name="tax_information"/>
                                <field name="amount"/>
                            </group>
                            <group>
                                <field name="bank_id"/>
                                <field name="country_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
